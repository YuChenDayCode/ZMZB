body {
	background: #fff;
	color: #000;
	font-family: Helvetica, Arial, sans-serif;
	font-size: .8em;
	line-height: 1.5;
}

pre.listing {
	background: #eee;
	border: 1px solid #ccc;
	margin: .3em auto;
	padding: .1em .3em;
	width: 90%;
}

pre.listing b {
	color: #f00;
}

/* TABLE
 * ========================================================================= */
table {
	border: 1px solid #B7D1EA;
	border-collapse: collapse;
	line-height: 1;
	margin: 1em auto;
	width: 100%;
}

/* Caption
 * ------------------------------------------------------------------------- */
table caption {
	font-size: .9em;
	font-weight: bold;
}

/* Header
 * ------------------------------------------------------------------------- */
table thead {
	background: #B7D1EA url(./images/bg-table-thead.png) repeat-x top left;
	font-size: .9em;
}

table thead tr th {
	border: 1px solid #B7D1EA;
	font-weight: normal;
	padding: .3em 1.67em .1em 1.67em;
	text-align: center;
}

/* Body
 * ------------------------------------------------------------------------- */
table tbody tr td {
	padding: .3em 1.5em;
}

table tbody tr.even {
	background: #f3f3f3;
}

table tbody tr.odd {
	background: #fff;
}
table tbody tr
{
	onmouseover:expression(onmouseover=function (){this.style.color='red';}); 
	onmouseout:expression(onmouseout=function (){this.style.color='';});
}
table span {
	background-position: center left;
	background-repeat: no-repeat;
	padding: .2em 0 .2em 1.5em;
}

table span.file {
	background-image: url(./images/page_white_text.png);
}

table span.folder {
	background-image: url(./images/folder.png);
}